# ========== OPhim API ==========
OPHIM_BASE_URL=https://ophim1.com/v1/api
# Giới hạn build (tránh treo/chạy quá lâu): OPHIM_MAX_PAGES (0=all), OPHIM_MAX_MOVIES (0=all), OPHIM_FETCH_TIMEOUT_MS (ms, mặc định 25000)
# OPHIM_MAX_PAGES=5
# OPHIM_MAX_MOVIES=500

# ========== TMDB API (lấy key tại https://www.themoviedb.org/settings/api) ==========
TMDB_API_KEY=your_tmdb_api_key

# ========== Google Sheets (Service Account - tạo tại Google Cloud Console) ==========
GOOGLE_SHEETS_ID=your_google_sheet_id
GOOGLE_SERVICE_ACCOUNT_KEY=path/to/service-account.json

# ========== Supabase Admin (dùng service_role key cho build script) ==========
SUPABASE_ADMIN_URL=https://xxxx.supabase.co
SUPABASE_ADMIN_SERVICE_ROLE_KEY=your_service_role_key

# ========== Supabase User (chỉ dùng trên frontend - anon key) ==========
# Frontend dùng biến này qua config từ site-settings
SUPABASE_USER_URL=https://yyyy.supabase.co
SUPABASE_USER_ANON_KEY=your_anon_key

# ========== Cloudflare R2 ==========
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=daop-media
R2_PUBLIC_URL=https://your-r2-public-url.com

# ========== GitHub (cho webhook trigger build) ==========
GITHUB_TOKEN=your_github_personal_token
GITHUB_REPO=username/repo-name
WEBHOOK_BUILD_TOKEN=random_secret_for_webhook

# ========== Admin local (đặt trong admin/.env khi chạy npm run dev) ==========
# VITE_WEBHOOK_BUILD_TOKEN=<cùng giá trị WEBHOOK_BUILD_TOKEN>
# VITE_API_URL=https://your-admin.vercel.app
